<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">

<!-- =========== FULL CONFIGURATION FILE ================================== -->
<faces-config>
  
  <!-- managed bean for mxml -->
  <managed-bean>
    <managed-bean-name>mxmlBean</managed-bean-name>
    <managed-bean-class>com.googlecode.jsfFlex.examples.mxml.MXMLBean</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  
  <!-- navigational rules for mxmlSimple -->
  <navigation-rule>
    <from-view-id>/mxmlSimple.jsp</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/mxmlSimple.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>
  <!-- navigational rules for mxmlSimple end -->
  
  <!-- navigational rules for mxmlExample -->
  <navigation-rule>
    <from-view-id>/mxmlExample.jsp</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/mxmlExampleSuccess.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>
  <!-- navigational rules for mxmlExample end -->
  
  <!-- navigational rules for mxmlExampleSuccess -->
  <navigation-rule>
    <from-view-id>/mxmlExampleSuccess.jsp</from-view-id>
    <navigation-case>
      <from-outcome>back</from-outcome>
      <to-view-id>/mxmlExample.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>
  <!-- navigational rules for mxmlExampleSuccess end -->
  
</faces-config>
